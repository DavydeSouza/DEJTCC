<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragments">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#A413F3"
        app:cardCornerRadius="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="679dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:padding="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <TextView
                android:id="@+id/Welcome"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="14dp"
                android:text="OlÃ¡ Cliente:"
                android:textAlignment="center"
                android:textColor="#5A0B4D"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nameUser"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Welcome"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="117dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="122dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/gray_400"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btSair"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="310dp"
                android:layout_marginEnd="0dp"
                android:text="Sair"
                android:textColor="@color/purple_200"
                app:icon="@drawable/ic_baseline_exit_to_app_24"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.495"
                card_view:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/bttermo"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="386dp"
                android:layout_height="72dp"
                android:layout_below="@+id/btSair"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="216dp"
                android:text="Termo de Responsabilidade"
                android:textColor="@color/purple_200"
                app:icon="@drawable/ic_baseline_content_paste_24"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.495"
                card_view:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btcontato"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="386dp"
                android:layout_height="64dp"
                android:layout_below="@+id/btSair"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="99dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="142dp"
                android:text="Entre em contato com o suporte "
                android:textColor="@color/purple_200"
                app:icon="@drawable/ic_baseline_support_agent_24"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.495"
                card_view:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>